{{!-- <HeadLayout /> --}}
{{page-title "Ember Page Title"}}
{{notification-container position="top-right" zindex="9999"}}
<div class="container-fluid m-0 p-0">
  <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
    <div class="container">
      {{!-- <a class="navbar-brand" href="#">Navbar</a> --}}
      <i class="navbar-brand bi bi-fire"></i>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <LinkTo @route="index" class="nav-link">Home</LinkTo>
          </li>
          <li class="nav-item">
            <LinkTo @route="about" class="nav-link" {{on "click" (fn this.trackEvent 'Click About')}}>About</LinkTo>
          </li>
          <li class="nav-item">
            <LinkTo @route="map" class="nav-link">Map</LinkTo>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Dropdown
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li><a class="dropdown-item" {{on 'click' (fn displayNotification 'info')}}>info</a></li>
              <li><a class="dropdown-item"  {{on 'click' (fn displayNotification 'warning')}}>warning</a></li>
              <li><a class="dropdown-item"  {{on 'click' (fn displayNotification 'error')}}>error</a></li>
              <li><a class="dropdown-item"  {{on 'click' (fn displayNotification 'success')}}>success</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item"  {{on 'click' (fn displayNotification 'all')}}>all</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  {{!-- <div> --}}
    {{outlet}}
  {{!-- </div> --}}
</div>
